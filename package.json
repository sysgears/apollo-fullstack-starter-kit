    "http-proxy-middleware": "^0.18.0",
    "husky": "^0.14.3",
    "ignore-loader": "^0.1.2",
    "ip": "^1.1.5",
    "isomorphic-style-loader": "^4.0.0",
    "jsdom": "^11.5.1",
    "lerna": "^2.5.1",
    "less": "^3.0.2",
    "less-loader": "^4.1.0",
    "lint-staged": "^7.1.2",
    "metro-react-native-babel-preset": "^0.42.2",
    "node-sass": "^4.7.2",
    "openurl": "^1.1.1",
