    "apollo-link-state": "^0.4.1",
    "apollo-link-ws": "^1.0.3",
    "apollo-logger": "^0.3.0",
    "apollo-upload-client": "^8.0.0",
    "graphql": "^14.1.1",
    "minilog": "^3.1.0",
    "rxjs": "^6.3.3",
    "subscriptions-transport-ws": "^0.9.4",
    "zone.js": "^0.8.26"
  },
  "devDependencies": {
    "@types/chai": "^4.1.4",
    "@types/lodash": "^4.14.118",
    "@types/mocha": "^5.2.5",
    "@types/webpack-env": "^1.13.6",
    "autoprefixer": "^8.3.0",
    "chai": "^4.1.2",
    "chai-http": "^4.0.0",
    "cross-env": "^5.1.1",
    "eslint": "^4.13.1",
